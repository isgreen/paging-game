<resources>

    <!-- TextView -->
    <style name="AppTheme.TextView.Primary" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="AppTheme.TextView.Accent" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="AppTheme.TextView.Primary.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
    <!-- TextView -->

    <!-- Button -->
    <style name="AppTheme.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
    <!-- Button -->

    <!-- CardView -->
    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="strokeColor">?attr/colorOnSurface</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
    </style>
    <!-- CardView -->

    <!-- CollapsingToolbar -->
    <style name="AppTheme.CollapsingToolbar.ExpandedTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- CollapsingToolbar -->
</resources>